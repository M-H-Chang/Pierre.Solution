@{
  Layout = "_Layout";
}

@model Candy.Models.Flavor

<h2>Add a flavor</h2>

<h4>Add a flavor to this Recipe: @Html.DisplayFor(model => model.Description)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.FlavorId)

  @Html.Label("Select treat")
  @Html.DropDownList("TreatId")

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to treats", "Index")</p>